<%- include('../partials/header') %>
<div class="container left">
    <form action="/teams/<%= team._id %>" method="POST">
        <div class="container">
            
            <label class="left">Name:
                <input type="text" name="name">
            </label>
            <select class="browser-default" name="position">Position:
                <option value="RB1">RB1</option>
                <option value="RB2">RB2</option>
                <option value="RB3">RB3</option>
                <option value="WR1">WR1</option>
                <option value="WR2">WR2</option>
                <option value="WR3">WR3</option>
                <option value="TE1">TE1</option>
                <option value="TE2">TE2</option>
            </select>
        </div>
        <div class="container">
            <label>Rush Yds/Game:
                <input type="text" name="rushYdsPG">
            </label>
            <label>Rush Attempts/Game:
                <input type="text" name="rushAttPG">
            </label>
            <label>Rushing TDs:
                <input type="text" name="rushTD">
            </label>
            <label>Reception Yards/Game:
                <input type="text" name="recYdsPG">
            </label>
            <label>Targets/Game:
                <input type="text" name="recTargets">
            </label>
            <label>Reception TDs:
                <input type="text" name="recTD">
            </label>
            <label>Average Draft Position:
                <input type="text" name="adp">
            </label>
            <input type="submit" value="Add Player" class="add-button">
        </div> 
    </form>
</div>
<%- include('../partials/footer') %>